@{
    ViewData["Title"] = "View Collection";
}
@model List<FilmCollectionResponse>

<table class="table table-bordered table-striped">
    <thead class="font-wieght-bold">

        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Director</td>
            <td>Year</td>
            <td>Edited</td>
            <td>LentTo</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Categoryid</td>
            <td>@x.Title</td>
            <td>@x.Director</td>
            <td>@x.Year</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieID">Delete</a></td>
        </tr>
        }

    </tbody>

</table>